// Find huffman code sizes
JPEGEncoder::HuffmanTable* JPEGEncoder::GenerateHuffman(const vector<uint8>& symbols)
{
	HuffmanTable* table = new HuffmanTable;

	int FREQ[257] = {0};
	int CODESIZE[257];
	int OTHERS[257];

	int i;
	for (i = 0; i < symbols.GetSize(); i++)
	{
		FREQ[symbols[i]]++;
	}
	FREQ[256] = 1;	// Reserve one code point.
						// Reserving one code point guarantees that no code word can ever be all “1” bits.

	for (i = 0; i < 257; i++)
	{
		CODESIZE[i] = 0;
		OTHERS[i] = -1;
	}

	while (1)
	{
		// Find the least frequent V1

		int V1 = -1;

		int V;
		for (V = 0; V < 257; V++)
		{
			if (FREQ[V] > 0)
			{
				if (V1 == -1 || FREQ[V] <= FREQ[V1])	// Select the one with the larger V
				{
					V1 = V;
				}
			}
		}

		// Find V2
		int V2 = -1;

		//V = V1+1;

		for (V = 0; V < 257; V++)
		{
			if (FREQ[V] > 0/* && FREQ[V] > FREQ[V1]*/)
			{
				if ((V2 == -1 || FREQ[V] <= FREQ[V2]) && V != V1)
				{
					V2 = V;
				}
			}
		}

		if (V2 == -1)
			break;

		FREQ[V1] += FREQ[V2];
		FREQ[V2] = 0;

		while (1)
		{
			CODESIZE[V1]++;

			if (OTHERS[V1] == -1)
				break;

			V1 = OTHERS[V1];
		}

		OTHERS[V1] = V2;

		while (1)
		{
			CODESIZE[V2]++;

			if (OTHERS[V2] == -1)
				break;

			V2 = OTHERS[V2];
		}
	}

	// Count bits

	int BITS[33] = {0};

	{
		for (int i = 0; i < 257; i++)
		{
			if (CODESIZE[i] != 0)
			{
				BITS[CODESIZE[i]]++;
			}
		}
	}

	// Adjust BITS
	{
		int I = 32;

		while (1)
		{
			if (BITS[I] > 0)
			{
				int J = I - 1;

				do
				{
					J--;
				}
				while (BITS[J] == 0);

				BITS[I] -= 2;
				BITS[I-1] += 1;
				BITS[J+1] -= 2;
				BITS[J] -= 1;
			}
			else
			{
				I--;

				if (I == 16)
				{
					while (BITS[I] == 0)
					{
						I--;
					}

					BITS[I] -= 1;

					break;
				}
			}
		}
	}

	{
		for (int i = 0; i < 17; i++)
		{
			table->BITS[i] = BITS[i];
		}
	}

	{
		for (int i = 0; i < 256; i++)
		{
			table->codesize[i] = CODESIZE[i];
		}
	}

	//uint8 huffval[256];

	// Sort input
	{
		int k = 0;

		for (int i = 1; i <= 32; i++)
		{
			for (int j = 0; j < 256; j++)
			{
				if (CODESIZE[j] == i)
				{
					table->huffval[k] = j;
					k++;
				}
			}
		}

		table->lastk = k;
	}

	{
			// For each code, get the length in bits
			int k = 0;

			for (int i = 0; i < 16; i++)
			{
				for (int j = 0; j < BITS[1+i]; j++)
				{
					table->huffsize[k++] = i+1;
				}
			}

			ASSERT(k < 256);
			table->lastk = k;

		// Assign codes

			uint16 code = 0;

			int si = table->huffsize[0];

			k = 0;

			while (1)
			{
				table->huffcode[k] = code;
				code++;
				k++;

				if (k == table->lastk)
					break;

				while (table->huffsize[k] != si)
				{
				//	ASSERT(huffman->huffsize[k] > si);
					si += 1;//huffman->huffsize[k];
					code <<= 1;
				}
			}

			{
				for (int i = 0; i < table->lastk; i++)
				{
					table->codes[table->huffval[i]] = table->huffcode[i];
				}
			}
	}

	return table;
}

